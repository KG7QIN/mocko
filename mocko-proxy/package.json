{
  "name": "@mocko/proxy",
  "version": "1.4.3",
  "description": "Mocko proxy service, serves mocks or proxies requests to your endpoint when no mock is defined.",
  "main": "dist/main",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "node dist/main",
    "start:dev": "nodemon --config nodemon.json",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabriel-pinheiro/mocko.git"
  },
  "author": "Gabriel Pinheiro <gabrielctpinheiro@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gabriel-pinheiro/mocko/issues"
  },
  "homepage": "https://github.com/gabriel-pinheiro/mocko#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.0.3",
    "@hapi/hoek": "^9.1.1",
    "@mocko/h2o2": "^9.0.3",
    "@mocko/helpers": "^1.0.1",
    "@mocko/logger": "^1.1.2",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "handlebars": "^4.7.6",
    "hcl-parser": "^0.1.1",
    "inversify": "^5.0.5",
    "ioredis": "^4.19.4",
    "joi": "^17.3.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/handlebars": "^4.1.0",
    "@types/hapi": "^18.0.4",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__h2o2": "^8.3.2",
    "@types/hapi__hapi": "^20.0.3",
    "@types/ioredis": "^4.17.10",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
